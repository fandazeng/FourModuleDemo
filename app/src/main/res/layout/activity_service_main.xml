<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/tv_start_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start启动服务" />

    <Button
        android:id="@+id/tv_start_intent_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start启动Intent服务" />

    <Button
        android:id="@+id/tv_stop_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop停止服务" />

    <Button
        android:id="@+id/tv_bind_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="bind启动服务" />

    <Button
        android:id="@+id/tv_unbind_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unbind服务" />




</LinearLayout>