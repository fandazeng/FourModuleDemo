<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/tv_navigation_standard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动Standard模式" />

    <Button
        android:id="@+id/tv_navigation_singleTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动singleTop模式" />

    <Button
        android:id="@+id/tv_navigation_singleTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动singleTask模式" />

    <Button
        android:id="@+id/tv_navigation_singleInstance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动singleInstance模式" />

</LinearLayout>